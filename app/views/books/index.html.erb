<body>
  
      <% if flash.notice %>
     <p class = "notice" > <%= flash.notice %></p>
    <% end %>
  
  <h1 class = "headline">Books</h1>
  

  <div class = "table-visual">
  
  <table>
	 <thead>
	   	<tr>
		  	<th>Title</th>
			 <th>Body</th>
			 <th colspan="3"></th>
		  </tr>
	 </thead>

    <tdody>
      <% @books.each do |book|%>
	      <tr>
         <td><%= book.title %></td>
          <td><%= book.body %></td>

          <td><%= link_to "Show", book_path(book.id) %>
            <%= link_to "Edit", edit_book_path(book.id) %>
            <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>

  <div class = "actions">
  <h2>New book</h2>
  <%= form_for(@book) do |f| %>

    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class = "field">
      <div class="field_with_errors">
        <label>Title</label>
      </div>
      <div class="field_with_errors">
        <%= f.text_field :title %><br>
      </div>
    </div>

    <div class = "field">
      <div class="field_with_errors">
    <label>Body</label>
      </div>
      <div class="field_with_errors">
        <%= f.text_area :body %>
      </div>
    </div>

    <br><%= f.submit 'Create Book' %></br>
    <% end %>
  </div>
</div>
</body>